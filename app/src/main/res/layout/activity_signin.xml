<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/layoutbd">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginBottom="0dp"
        android:background="#DDF2FF">

        <Button
            android:id="@+id/backArrow"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            android:backgroundTint="#DDF2FF"
            android:drawableLeft="@drawable/back"
            android:text="back " />

        <TextView
            android:id="@+id/verificationHeadingTextView"
            android:layout_width="191dp"
            android:layout_height="65dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/backArrow"
            android:gravity="center"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="#00BCD4"
            android:textSize="34sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="471dp"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"
        android:background="#DFFBFF"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:layout_marginBottom="28dp"
            android:gravity="center"
            android:text="LOGIN"
            android:textAlignment="center"
            android:textColor="#00BCD4"
            android:textSize="44sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/phoneNumberEditText"
            android:layout_width="258dp"
            android:layout_height="48dp"
            android:layout_marginLeft="105px"
            android:layout_marginBottom="8dp"
            android:background="@drawable/round_edittext"
            android:hint="(+92) Phone Number"
            android:inputType="phone"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/passwordEditText"

            android:layout_width="252dp"
            android:layout_height="48dp"
            android:layout_marginLeft="125px"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"

            android:background="@drawable/round_edittext"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/signInButton"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="265px"
            android:layout_marginTop="12dp"
            android:backgroundTint="#00BCD4"
            android:text="Sign In"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/signUpTextView"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="345px"
            android:layout_marginTop="8dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:onClick="signup"
            android:text='New Member? Sign Up'
            android:textColor="#00BCD4" />

    </LinearLayout>


</LinearLayout>


