<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginBottom="0dp"
        android:background="#FEF5DE">

        <Button
            android:id="@+id/backArrowwallet"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            android:backgroundTint="#FDF4DD"
            android:drawableLeft="@drawable/back"
            android:text="back " />

        <TextView
            android:id="@+id/verificationHeadingTextView"
            android:layout_width="191dp"
            android:layout_height="65dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/backArrowwallet"
            android:gravity="center"
            android:text="Wallet"
            android:textAlignment="center"
            android:textColor="#00BCD4"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="66dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="19dp"
            android:background="#FDF4DD"
            android:padding="1dp"
            android:src="@drawable/walletorange" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="#E8F6F9">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Current Balance Rs.0"
            android:textColor="#206F91"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/pButton"
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:backgroundTint="#206F91"
            android:text="Promotional Credits Rs.0"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/aButton"
                android:layout_width="175dp"
                android:layout_height="139dp"
                android:layout_weight="1"
                android:backgroundTint="#46C7AF"
                android:text="Add Balance" />


            <Button
                android:id="@+id/rButton"
                android:layout_width="86dp"
                android:layout_height="168dp"
                android:layout_weight="1"
                android:backgroundTint="#F7941D"
                android:text="Referal Credits Rs.0" />

        </LinearLayout>

        <Button
            android:id="@+id/tButton"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_weight="1"
            android:backgroundTint="#33C1C5"
            android:text="Transaction History" />
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="203dp">


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="125dp"
            app:itemIconTint="@null"
            app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
            app:menu="@menu/bottom_navigation_menu">

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</LinearLayout>